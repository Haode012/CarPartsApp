<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.MyOrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_order_image"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:src="@drawable/my_order"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".3"/>

        <TextView
            android:id="@+id/my_cart_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You haven't purchase anythings yet"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FDC12A"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_order_image"
            app:layout_constraintVertical_bias="0"
            app:textAllCaps="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>