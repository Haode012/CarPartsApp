<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.CustomerHomepageEdit.AddCarPartsCategoryFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">
        <TextView
            android:id="@+id/textViewAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#FDC12A"
            android:textSize="34sp"
            android:textStyle="bold"
            android:text="Add Car Part Category"
            />

        <ImageView
            android:id="@+id/imageViewCarPartCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginVertical="30dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            tools:ignore="SpeakableTextPresentCheck"
            android:src="@drawable/upload_image_icon"/>

        <EditText
            android:id="@+id/editTextCarPartCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="20sp"
            android:hint="Enter Car Part Category Name"
            tools:ignore="SpeakableTextPresentCheck"/>

        <EditText
            android:id="@+id/editTextCarPartCategoryType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="20sp"
            android:hint="Enter Car Part Category Type"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/buttonConfirmAddCarPartCategory"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:minHeight="10dp"
            android:text="Confirm"
            android:textColor="@color/black"
            app:backgroundTint="#FDC12A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSearch"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</ScrollView>